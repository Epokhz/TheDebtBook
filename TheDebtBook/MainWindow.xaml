<Window x:Class="TheDebtBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheDebtBook"
        mc:Ignorable="d"
        Title="TheDebtBook" Height="450" Width="800">
    <Window.DataContext>
        <local:WindowViewModel />
    </Window.DataContext>
    <StackPanel>
        <DockPanel Name ="TheDebtBook">
            <Menu>
                <MenuItem Header="_File" >
                    <MenuItem Header="_New" Command="{Binding NewFileCommand}"/>
                    <MenuItem Header="_Open" Command="{Binding OpenFileCommand}" CommandParameter="{Binding ElementName=tbxFileName, Path=Text}" />
                    <MenuItem Header="_Save" Command="{Binding SaveCommand}" />
                    <MenuItem Header="Save _As" Command="{Binding SaveAsCommand}" CommandParameter="{Binding ElementName=tbxFileName, Path=Text}" />
                    <MenuItem Header="E_xit" Command="{Binding CloseAppCommand}"/>
                </MenuItem>
                <MenuItem Header="_Debts">
                    <MenuItem Header="_Add new" Command="{Binding Path=AddNewDebtCommand}"/>
                    <MenuItem Header="_Delete" Command="{Binding Path=DeleteDebtCommand}"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <DockPanel>
            <Grid Name="DebtGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="4*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Label Height="28" Margin="10,12,0,43"  Grid.Column="0"   Content="Debt:"   />

                <ListBox ItemsSource="{Binding}"
                         IsSynchronizedWithCurrentItem="True"
                         DisplayMemberPath="Name"
                         Name="ListboxDebts" 
                         Grid.Column="0" 
                         Margin="8,40,10,-23"  
                />

                <Label Height="28" Margin="0,10,0,40"  Grid.Column="1" >Name:</Label>
                <Label Height="28" Margin="0,46,0,9" Grid.Column="1" >Amount:</Label>

                <TextBox Margin="10,18,0,0" 
                         Name="tbxName" 
                         VerticalAlignment="Top" 
                         HorizontalAlignment="Left" 
                         MinWidth="58"
                         Text="{Binding Path=Name}" 
                         Grid.Column="2" Width="264"   
                />
                <TextBox Margin="10,55,0,0" 
                         Name="tbxAmount"
                         VerticalAlignment="Top" 
                         HorizontalAlignment="Left" 
                         Text="{Binding Path=Amount}" 
                         Grid.Column="2" Width="264"        
                />
            </Grid>
        </DockPanel>
        <Button ToolTip="Add New" 
                Content="Add"
                Name="BtnAddNew"
                Click="BtnAddNew_Click" 
                Margin="674,0,43,0"/>
    </StackPanel>
</Window>
